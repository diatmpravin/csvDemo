
<head>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>

<%= javascript_include_tag('jquery.tree','jquery.treeajax','jquery.treecheckbox','jquery.treecollapse','jquery.treecontextmenu','jquery.treednd','jquery.treeselect')%>

<%= stylesheet_link_tag('jquery.tree','jquery-ui')%>


<script type="text/javascript">
     //<!--
        $(document).ready(function() {
            $( "#accordion" ).accordion({
                'collapsible': true,
                'active': -1
            });
            $('.jquery').each(function() {
                eval($(this).html());
            });
            $('.button').button();
        });
      //-->
    </script>
</head>

<body>
<h1>Listing imports</h1>
<%= form_tag importCsv_imports_path, :method => 'post', :multipart => true do %>
		<p>
			Select File
			<%= file_field_tag 'file' %>
			<%= submit_tag 'Upload data', :name => nil %>
		</p>
<% end %>

<div id="accordion">
<div id="example-3">
            <script class="jquery" lang="text/javascript">
                $('#example-3 div').tree({
                    components: ['checkbox','collapse','ajax','dnd'],
                    onCheck: {
                        node: 'expand'
                    },
                    onUncheck: {
                        node: 'collapse'
                    }
                });
            </script>

		
			<div>
                <ul>
				<% @imports.each do |import| %>
                    <li class="collapsed"><input type="checkbox"><span><b>Name: <%= import.firstname %>&nbsp;<%= import.lastname %></b></span>
                    <ul>
                    	<li class="collapsed"><input type="checkbox"><span><b>Position:</b> <%= import.position %></span>
                        <ul>
                            <li class="collapsed"><input type="checkbox"><span><b>ReportTo:</b> <%= import.reportto %></span>
							<li class="collapsed"><input type="checkbox"><span><b>JobTitle:</b> <%= import.positiontitle %></span>
                        </ul>
                    </ul>
				<% end %>
                </ul>
            </div>
		
</div>
</div>
</body>
</html>
